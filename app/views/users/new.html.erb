<h1>Create a New User</h1>
<%= flash[:message] %>
<%= form_for @user do |f| %>
  <%= f.label "Name: " %>
  <%= f.text_field :name %> <br>
  <%= f.label "E-mail: " %>
  <%= f.text_field :email %> <br>
  <%= f.label "Password: " %>
  <%= f.password_field :password %> <br>
  <%= f.label "Confirm Password: " %>
  <%= f.password_field :password_confirmation %> <br>
  <%= f.submit %>
<% end %>
