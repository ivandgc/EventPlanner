<h1>Edit User</h1>
<br>
<%= flash[:message] %>
<br>
<%= form_for(@user) do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>
  <%= f.label "Email:" %>
  <%= f.email_field :email %><br>
  <%= f.label "Password:" %>
  <%= f.password_field :password %><br>
  <%= f.label "Password Confirmation:" %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit %>
<% end %>
