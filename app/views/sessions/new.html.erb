<!-- <h1>Sign In</h1>
<br> -->
<%# flash[:message] %>
<%# form_tag(signin_path) do %>
  <%# label_tag 'E-mail:' %>
  <%# text_field_tag :'user[email]' %><br>
  <%# label_tag 'Password:' %>
  <%# password_field_tag :'user[password]' %><br>
  <%# submit_tag "Sign In" %>
<%# end %>

<!-- Site Properties -->

  <style type="text/css">
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>



  <div class="ui middle aligned center aligned grid">

    <div class="column">
      <h2 class="ui teal image header">
        <div class="content">
          Log-in to your account
        </div>
      </h2>

  <%= flash[:message] %>
  <%= form_tag signin_path, class: "ui large form" do %>
  <div class="ui stacked segment">

    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= text_field_tag :'user[email]', nil, placeholder: "email address" %><br>
      </div>
    </div>

      <div class="field">
        <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= password_field_tag :'user[password]', nil, placeholder: "password" %><br>
        </div>
      </div>

      <%= submit_tag "Sign in", class: "ui fluid large teal submit button" %>

      </div>
    <% end %>


    <div class="ui message">
      New to us? <a href="/users/new">Sign Up</a>
    </div>

  </div>
</div>
