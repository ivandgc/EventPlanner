<h1>Create Event</h1>
<% if flash[:message] %>
  <ul>
    <% flash[:message].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for [@occasion, @event] do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %><br>
  <%= f.label "Location" %>
  <%= f.text_field :location %><br>
  <%= f.label "Minimum Duration" %>
  <%= f.time_select :duration, minute_step: 30, default: {hour: 1} %><br>
  <%= f.fields_for :term, @event.term do |t| %>
    <%= t.label "Start Time:" %>
    <%= t.datetime_field :start_term, min: Date.today %><br>
    <%= t.label "End Time:" %>
    <%= t.datetime_field :end_term, min: Date.today %><br>
  <% end %>
  <%= f.submit %>
<% end %>
