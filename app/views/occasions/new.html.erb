<h1>Create New Occasion</h1>
<br>

<% if @occasion.errors.any? %>
    <ul>
    <% @occasion.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for(@occasion) do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %><br>
  <%= f.fields_for :term, @occasion.term do |t| %>
    <%= t.label "Start Time:" %>
    <%= t.datetime_field :start_term, min: DateTime.now %><br>
    <%= t.label "End Time:" %>
    <%= t.datetime_field :end_term, min: DateTime.now %><br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
