<body class="homepage">
  <div class="home_msg">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Event Planner</h1>
      </div>
      <%= flash[:message] %>
      <%= form_tag signin_path, {class: 'form-group'} do %>
      <div class="panel-body">
          <%= label_tag 'E-mail:' %>
          <%= text_field_tag :'user[email]', "", class: 'form-control', placeholder: "user@domain.com" %>
          <%= label_tag 'Password:' %>
          <%= password_field_tag :'user[password]', "", class: 'form-control', placeholder: "*******" %><br>
          <%= submit_tag "Sign In", class: "btn btn-primary btn-block" %>
        <% end %><br>
        <%= button_to "Sign up!", new_user_path, method: :get, class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
</body>
